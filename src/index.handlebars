<!doctype html>
<html>

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Tenjin Kotone 2021 Birthday Project!</title>
  <meta name="description" content="Celebrating Tenjin Kotone's 2021 Birthday!"/>

  <meta name="twitter:card" content="summary_large_image">
  <meta name="og:title" content="Tenjin Kotone 2021 Birthday Project!" />
  <meta name="og:description" content="Celebrating Tenjin Kotone's 2021 Birthday!" />
  <meta name="og:image" content="https://skk-tj.github.io/kotone-birthday-2021/img/5ktn.png">

  <link href="./style.css" rel="stylesheet">
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

  <link rel="preconnect" href="https://fonts.googleapis.com"> 
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> 
  <link href="https://fonts.googleapis.com/css2?family=Yomogi&display=swap" rel="stylesheet">

  <link rel="icon" type="image/png" href="./img/favicon.png"/>

  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/granim/2.0.0/granim.min.js"
    integrity="sha512-CmlPTWm5+a1Gt2YSNk2rGZVvbH3Zge6imS7M4/vrhC8d+A1RcehmLxWMqUdv8aEu7pwfTo74EtnrR+8Cf8KdCA=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
</head>

<body>
  <canvas id="granim-canvas" class="w-full h-full fixed -z-20">
    <div id="particle-js" class="-z-10"></div>
  </canvas>
  <div class="absolute top-0 right-0">
    <img src="./img/KotoneMushroomColored.png" width="100" height="100" class="transform rotate-12">
  </div>

  <div class="container mx-auto pt-6 z-10">
    <section class="container flex flex-col justify-center w-full h-screen">
      <h1 class="text-center font-sans text-7xl font-bold p-6" data-aos="zoom-in">
        Kotone-sama Happy Birthday!
      </h1>
      <h3 class="text-center text-4xl font-normal" data-aos="zoom-in" style="font-family: 'Yomogi', cursive;">
        ことね様、お誕生日おめでとう！
      </h3>
      <p>

      </p>
    </section>

    <section class="container flex flex-col justify-center w-full">
      <h1 class="text-center text-3xl font-normal">
        Birthday Illustration
      </h1>
      <h3 class="text-center text-xl font-normal" style="font-family: 'Yomogi', cursive;">
        イラスト
      </h3>
      </figure>
        <img src="./img/5ktn.png" alt="Birthday Illustration" class="object-scale-down pt-6">
        <figcaption class="text-center text-gray-800">By @Vichyn5</figcaption>
      </figure>
    </section>

    <section class="container pt-12 pb-6">
      <h1 class="text-center text-3xl font-normal">Messages from Worshippers</h1>
      <h3 class="text-center text-xl font-normal" style="font-family: 'Yomogi', cursive;">信者さんからのメッセージ</h3>
      <div class="container grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 place-items-center">

        {{#each messages}}
        <!-- Card -->
        <div class="w-11/12 md:w-md lg:w-md xl:w-lg rounded shadow-lg bg-white mt-4 mb-4" data-aos="fade-up">
          <div class="px-4 py-4">
            <div class="flex flex-row flex-nowrap justify-between">
              <div class="flex flex-col">
                <p class="font-bold text-xl">{{ name }}</p>
                <p class="text-gray-500 text-sm font-mono">{{ twitter }}</p>
              </div>
              <img src="./img/KotoneMushroomColored.png" width="70" height="70" class="transition transform rotate-12 translate-x-4 -translate-y-4 hover:scale-125">
            </div>
            <p class="text-gray-700 text-base mt-2">
              {{ breaklines content }}
            </p>
          </div>
        </div>
        {{/each}}
      </div>
    </section>
  </div>
</body>

<script>
  let granimInstance = new Granim({
    element: "#granim-canvas",
    name: 'granim',
    opacity: [1, 1],
    states: {
      "default-state": {
        gradients: [
          ['#834D9B', '#D04ED6'],
          ['#1CD8D2', '#93EDC7']
        ]
      }
    }
  });

  AOS.init({
    once: true
  });
</script>

</html>